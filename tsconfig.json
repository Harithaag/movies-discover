{
    "compilerOptions": {
      "target": "ES6",                      
      "lib": ["DOM", "DOM.Iterable", "ES6"], 
      "allowJs": true,                     
      "skipLibCheck": true,                
      "strict": true,                     
      "esModuleInterop": true,             
      "module": "ESNext",                  
      "moduleResolution": "Node",         
      "resolveJsonModule": true,          
      "isolatedModules": true,            
      "jsx": "react-jsx",                 
      "baseUrl": "src",                   
      "paths": {                          
        "components/*": ["components/*"],
        "utils/*": ["utils/*"]
      },
      "outDir": "./dist",                 
      "noEmit": true,                     
      "forceConsistentCasingInFileNames": true 
    },
    "include": ["src"],                   
    "exclude": ["node_modules", "dist"]   
  }
  